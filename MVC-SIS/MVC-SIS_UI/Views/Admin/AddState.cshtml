@model MVC_SIS_UI.Models.AddStateVM
@{
    ViewBag.Title = "AddState";
}

<h2>AddState</h2>

<div class="row">
    <div class="col-xs-12">
        <h3>Add State</h3>
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>State</label>
                @Html.TextBoxFor(m => m.currentState.StateName, new { @class = "form-control", placeholder = "State Name" })
                @Html.TextBoxFor(m => m.currentState.StateAbbreviation,new { @class = "form-control", placeholder ="State Abbreviation"})
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>

